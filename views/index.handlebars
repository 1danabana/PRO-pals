<div class="jumbotron">
  <h1 class="display-4">PRO-Pal!</h1>
  <div class="row">

    <div class="col-4">
      <div class="row">
        <div class="col">
          <img src="./img/cat.png" width="45%">
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="row">
        <div class="col">
          <p>Lives: 9/9</p>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <p>Tasks Remaining: 3</p>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="row">
        <div class="col">
          <p>Current Streak: 4 days</p>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <p>Longest Streak: 7 days</p>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="container-fluid">

  <div class="row">

    <div class="col-8">
      <div class="card">
        <div class="card-header">
          To Do List
        </div>
        <div class="card-body">
          <ul id="task-list" class="list-group">
            {{#each tasks}}
            <li data-id="{{this.id}}" class="list-group-item">
              <p>{{this.text}}</p>
              <span>{{this.description}}</span>
              <button class="btn btn-danger float-right delete">ï½˜</button>
              <button class="btn btn-success float-right completed">&#10003;</button>
              <button class="btn btn-info float-right edit">&#9998;</button>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-4">
       <div class="card">
      <div class="card-header">
        Add Task
      </div>
      <div class="card-body">
        <form action="POST">
          <div class="form-group">
            <label for="task-title">Task Title</label>
            <input type="text" id="task-title" class="form-control" aria-describedby="task-title" placeholder="Enter Task Text">
          </div>
          <div class="form-group">
            <label for="task-description">Task Description</label>
            <textarea class="form-control" id="task-description" aria-describedby="task-description" placeholder="Enter Task Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
    </div>
    </div>
  </div>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>