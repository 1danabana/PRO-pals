<div class="jumbotron">
  <div class="d-flex justify-content-center">
    <h1 class="display-4">PRO-Pal!</h1>
    <img src="./img/cat.png" width="15%">
  </div>
  <div class="row">

    <div class="col-6">
      <h2 class="display-5" id="lives-count"></h2>
    </div>

    <div class="col-6">
      <h2 class="display-5 float-right" id="task-count"></h2>
    </div>

  </div>
</div>

<div class="container-fluid">

  <div class="row">

    <div class="col-8">

          <div class="card">
            <div class="card-header">
              To Do List
            </div>
            <div class="card-body">
              <ul id="task-list" class="list-group">
                {{#each tasks}}
                  {{#unless this.completed}}
                    <li data-id="{{this.id}}" class="list-group-item">
                      <span>{{this.text}}</span>
                      <span class="float-right">Complete by: {{formatDate this.completeBy}}</span>
                      <br>
                      <span>{{this.description}}</span>
                      <button class="btn btn-danger float-right delete">ï½˜</button>
                      <button class="btn btn-success float-right completed">&#10003;</button>
                      <button class="btn btn-info float-right edit">&#9998;</button>
                    </li>
                  {{/unless}}
                {{/each}}

                {{#each tasks}}
                  {{#if this.completed}}
                   <li data-id="{{this.id}}" class="list-group-item">
                      <span style="text-decoration: line-through;">{{this.text}}</span>
                      <span class="float-right" style="text-decoration: line-through;">Complete by: {{formatDate this.completeBy}}</span>
                      <br>
                      <span style="text-decoration: line-through;">{{this.description}}</span>
                      <span class="float-right" style="text-decoration: line-through;">Completed on: {{formatDate this.completedOn}}</span>
                  </li>
                  {{/if}}
                {{/each}}
              </ul>
            </div>
          </div>

    </div>

    <div class="col-4">
      <div class="card">
        <div class="card-header">
          Add Task
        </div>
        <div class="card-body">
          <form action="POST">

            <div class="form-group">
              <label for="task-title">Task Title</label>
              <input type="text" id="task-title" class="form-control" aria-describedby="task-title"
                placeholder="Enter Task Text">
            </div>

            <div class="form-group">
              <label for="datetimepicker">Task Completion Date</label>
              <input type="text" class="form-control datetimepicker-input" id="datetimepicker"
                data-toggle="datetimepicker" data-target="#datetimepicker" placeholder="mm/dd/yyyy">
            </div>

            <button id="submit" class="btn btn-primary float-right">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js">
</script>
<script src="/js/index.js"></script>

<script type="text/javascript">
  $(function () {
    $('#datetimepicker').datetimepicker({
      format: 'L',
      minDate: moment()
    });
  });
</script>