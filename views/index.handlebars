<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>PRO-Pal - Your Productivity Buddy</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="task-title">Task Title</label>
            <input type="text" id="task-title" class="form-control" aria-describedby="task-title" placeholder="Enter Task Text">
          </div>
          <div class="form-group">
            <label for="task-description">Task Description</label>
            <textarea class="form-control" id="task-description" aria-describedby="task-description" placeholder="Enter Task Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Tasks:</h3>
        <ul id="task-list" class="list-group">
          {{#each tasks}}
          <li data-id="{{this.id}}" class="list-group-item">
            <p>{{this.text}}</p>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
